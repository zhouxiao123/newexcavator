<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newexcavator.dao.LotteryDao">
	<insert id="saveLottery"  parameterType="com.newexcavator.domain.Lottery" useGeneratedKeys="true" keyProperty="id">
		insert into lottery(username,phone,status)
		values(#{username},#{phone},0)
	</insert>
	<select id="queryLottery" resultType="com.newexcavator.domain.Lottery">
		select * from lottery where phone=#{phone}
	</select>
	<select id="queryLotteryList" resultType="com.newexcavator.domain.Lottery">
		select * from lottery where 1=1 
		<if test="status!=null">
		AND `status` = #{status}
		</if>
	</select>
	<update id="updateLottery">
		update lottery set status = 1 where phone = #{phone}
	</update>
	
	<update id="clearLotteryList">
		truncate table lottery 
	</update>
</mapper>